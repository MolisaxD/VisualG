Algoritmo "semnome"
   // Disciplina   : [Linguagem e Lógica de Programação]
   // Professor   : Renisson Rodrigues de Souza
   // Descrição   : Eleição
   // Autor(a)    : Melissa Souza Borges
   // Data atual  : 26/05/2023
   Var
           cand1, cand2, cand3, votantes, opcao, i: inteiro

   Inicio
           escreva("Insira o número de votos que serão inseridos: ")
           leia(votantes)
           
           para i de 1 ate votantes faca
                escreva("Voto ", i, " - Escolha um candidato de 1 a 3: ")
                leia(opcao)
                
                escolha opcao
                
                caso 1
                         escreval("Voto computado.")
                         cand1 <- cand1 + 1
                caso 2
                         escreval("Voto computado.")
                         cand2 <- cand2 + 1
                caso 3
                         escreval("Voto computado.")
                         cand3 <- cand3 + 1
                outrocaso
                         escreval("Opção inválida: Voto computado como nulo.")
                fimescolha
           fimpara
           limpatela
           escreval("Resultados da eleição:")
           escreval("Candidato 1: ", cand1, " votos.")
           escreval("Candidato 2: ", cand2, " votos.")
           escreva("Candidato 3: ", cand3, " votos.")

Fimalgoritmo
